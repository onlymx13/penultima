{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "es2020",                   
     "outDir": "./build",                        
    "strict": true,                           
     "alwaysStrict": true,                  
     "moduleResolution": "node",            
     "types": ["node"],                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
